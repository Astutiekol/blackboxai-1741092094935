# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
DATABASE_URL=postgresql://user:password@neon-database-url/dbname
MONGO_URI=mongodb+srv://user:password@cluster.mongodb.net/dbname

# Solana Configuration
SOLANA_RPC_URL=https://api.devnet.solana.com
SOLANA_NETWORK=devnet
LOTTERY_PROGRAM_ID=your_program_id_here
TREASURY_WALLET=your_treasury_wallet_address_here

# Security
JWT_SECRET=your_jwt_secret_here
CORS_ORIGIN=http://localhost:3000

# Lottery Configuration
TICKET_PRICE=0.1
MIN_JACKPOT=1000
DRAW_INTERVAL=86400000  # 24 hours in milliseconds
MAX_TICKETS_PER_PURCHASE=100

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379

# Monitoring
SENTRY_DSN=your_sentry_dsn_here
LOG_LEVEL=debug

# Admin Configuration
ADMIN_WALLET_ADDRESSES=wallet1,wallet2,wallet3
